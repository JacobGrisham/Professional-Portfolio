{
  "name": "project_portfolio",
  "version": "1.0.0",
  "description": "Portfolio of web development projects",
  "main": "app.js",
  "scripts": {
    "dev": "parcel views/index.ejs public/css/style.css public/js/index.js -p 3000",
    "build": "parcel build views/index.ejs public/css/style.css public/js/index.js --public-url ./dist/",
    "watch:sass": "node-sass public/sass/main.scss public/css/style.css -w",
    "devserver": "live-server",
    "start:sass": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass public/sass/main.scss public/css/style.comp.css",
    "concat:css": "concat -o public/css/style.concat.css public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.concat.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "start": "node app.js"
  },
  "author": "Jacob Grisham",
  "license": "Copyright Notice and Statement: currently not offering any license. Permission only to view and download.",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concat": "^1.0.3",
    "jest": "^26.6.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "lax.js": "^2.0.3"
  }
}
